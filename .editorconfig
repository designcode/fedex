# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{json,yaml,yml}]
indent_size = 4
indent_style = space

[*.ts]
quote_type = single
indent_size = 4

[*.md]
# if you set this to "off", prettier will interpret this as nothing is defined and default to 80
max_line_length = 99999
trim_trailing_whitespace = false

[*.{css, scss}]
indent_size = 2
